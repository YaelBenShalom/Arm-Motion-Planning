<?xml version="1.0"?>
<robot name="ddrive" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- <xacro:include filename="$(find turtlebot3_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find turtlebot3_description)/urdf/turtlebot3_burger.gazebo.xacro"/> -->
  <xacro:property name="ddrive" value="$(find diff_drive)/config/ddrive.yaml" />
  <xacro:property name="dictionary" value="${load_yaml(ddrive)}"/>
  <xacro:property name="L" value="${dictionary['L']}"/>
  <xacro:property name="W" value="${dictionary['W']}"/>   
  <xacro:property name="H" value="${dictionary['H']}"/>   

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${L} ${W} ${H}"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${L} ${W} ${H}"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="8.2573504e-01"/>
      <inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="${3*L/8} ${W/2 + 0.080} 0.0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="package://diff_drive/meshes/wheels/left_tire.stl" scale="0.005 0.005 0.005"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.09" radius="0.165"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="${3*L/8} ${-W/2 - 0.080} 0.0" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="package://diff_drive/meshes/wheels/right_tire.stl" scale="0.005 0.005 0.005"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.09" radius="0.165"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>

  <joint name="caster_bottom_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_bottom_back_link"/>
    <origin xyz="${-3*L/7} 0 ${-H/2 - 0.030}" rpy="-1.57 0 0"/>
  </joint>

  <link name="caster_bottom_back_link">
    <visual>
      <origin rpy="1.57 0 0" xyz="0 0.001 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="Black"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0.001 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <joint name="caster_top_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_top_back_link"/>
    <origin xyz="${-3*L/7} 0 ${H/2 + 0.030}" rpy="-1.57 0 0"/>
  </joint>

  <link name="caster_top_back_link">
    <visual>
      <origin rpy="1.57 0 0" xyz="0 0.001 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="Black"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0.001 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.005" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

</robot>
